{
  "manifest_version": 3,
  "name": "Privacy Personality Analyzer",
  "version": "1.2.0",
  "description": "Analyzes your browsing history to predict personality traits and privacy preferences",
  "permissions": [
    "history",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Analyze My Digital Personality",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "icons": {
    "16": "icon.png"
  }
}